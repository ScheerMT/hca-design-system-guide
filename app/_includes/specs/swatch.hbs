<span class="hca-text--body-2">
  {{#if no-pallette}}
  {{else}}
    <span class="hca-color-swatch hca-color-swatch--xs hca-color-swatch--{{color}}"></span>
  {{/if}}
  {{swatch color}}
</span>
<span class="hca-text__weight--semibold">HEX: </span>{{swatch color 'hex'}} <br />
<span class="hca-text__weight--semibold">RGB: </span>{{swatch color 'rgb'}}
