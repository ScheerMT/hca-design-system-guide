      <section class="app-section">
        <h2 class="hca-typography--title">Row Selection</h2>
        <div class="row">
          <div class="col-sm-4">
            <div class="hca-layout__container--body-content">
              <p class="hca-typography--body-1">When a row is selected, display a background color on the row.</p>
            </div>
          </div>
          <div class="col-sm-8">
            <figure class="hca-visual-example">
              <img src="{{page.base_url}}images/components/data-tables/row-selection.png" class="img-responsive hca-visual-example__comp" alt="" />
              <figcaption class="hca-visual-example__caption hca-typography--caption">Selected table rows</figcaption>
            </figure>
          </div>
        </div>
        {{!-- / row --}}
      </section>
      <section class="app-section">
        <h2 class="hca-typography--title">Column Sorting</h2>
