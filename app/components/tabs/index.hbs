            <figure class="hca-visual-example">
              <img src="{{page.base_url}}images/components/tabs/scrollable-tabs-end.png" class="img-responsive hca-visual-example__comp" alt="Scrollable tabs after scrolling to the end of available options." />
              <figcaption class="hca-visual-example__caption">Scrollable tabs after scrolling to the end of available options.</figcaption>
            </figure>
          </div>
        </div>
      </div>
    </article>
