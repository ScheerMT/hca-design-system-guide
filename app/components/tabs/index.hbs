            <figure class="hca-visual-example hca-visual-example--dont">
              <img src="{{page.base_url}}images/components/tabs/ellipsis-single-line-dont.png" class="img-responsive hca-visual-example__comp" alt="Do not ellipsis single line labels." />
              <figcaption class="hca-visual-example__caption">Do not ellipsis single line labels.</figcaption>
            </figure>
          </div>
        </div>
      </section>
